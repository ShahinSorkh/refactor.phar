{
  "name": "shso/refactor.phar",
  "description": "Refactoring Browser for PHP",
  "license": "Apache-2.0",

  "authors": [
    { "name": "Benjamin Eberlei", "email": "kontakt@beberlei.de" },
    { "name": "Shahin Sorkh", "email": "sorkh.shahin@hotmail.com" }
  ],

  "require": {
    "php": "^7.2||^8.0",
    "nikic/php-parser": "~4.13.0",
    "beberlei/assert": "~3.3.1",
    "symfony/finder": "~5.3.7",
    "symfony/console": "~5.3.7",
    "tomphp/patch-builder": "~0.1.0"
  },

  "require-dev": {
    "php": "^7.2.24||^8.0",
    "mikey179/vfsstream": "~1.6.10",
    "phake/phake": "~4.1.0",
    "symfony/process": "~5.4.46",
    "phpunit/phpunit": "~8.5.21",
    "psy/psysh": "~0.10.9",
    "behat/behat": "~3.7.0",
    "friendsofphp/php-cs-fixer": "^3.2"
  },

  "autoload": {
    "psr-4": {
      "QafooLabs\\": "src/"
    }
  },

  "autoload-dev": {
    "classmap": ["features/bootstrap"],
    "psr-4": {
      "Tests\\": "tests/"
    }
  },

  "config": {
    "platform": {
      "php": "7.2.24"
    }
  },

  "bin": ["bin/refactor"]
}
